#include <vector>

using std::vector;

#include <vector>

using std::vector;

class Solution {
public:
    int subsetXORSum(vector<int>& nums) {
        int ans = 0;
        for (int i : helper(nums, 0))  ans += i;
        return ans;
    }

private:
    vector<int> helper(vector<int>& nums, int i) {
        if (i == size(nums)) return { 0 };
        vector<int> n = helper(nums, i + 1);
        vector<int> ans;
        for (int j : n) {
            ans.push_back(j);
            ans.push_back(j ^ nums[i]);
        }
        return ans;
    }
};
